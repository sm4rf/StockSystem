
@{
    ViewBag.Title = "Login";
}

    <section class="login-section">
        <div class="login-container">
            <div class="login-box">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item w-50 text-center">
                        <a class="nav-link tb active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Login</a>
                    </li>
                    <li class="nav-item w-50 text-center">
                        <a class="nav-link tb" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Sign Up</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h4>Login</h4>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" class="form-control" placeholder="Email" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" class="form-control" placeholder="Password" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success btn-outline-dark" value="Login" />
                        </div>
                        <div class="form-group">
                            <a href="#" class="float-md-right">Forgot password?</a>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <h4>Sign Up</h4>
                        <div class="form-group">
                            <label>Employee ID:</label>
                            <input type="text" class="form-control" placeholder="ID" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" class="form-control" placeholder="Email" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" class="form-control" placeholder="Password" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <label>Confirm Password:</label>
                            <input type="password" class="form-control" placeholder="Confirm Password" name="name" value="" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success btn-outline-dark" value="Register" />
                        </div>
                        <div class="form-group">
                            <a href="#" class="float-md-right">Already have an account?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
