
@{
    ViewBag.Title = "Mail";
}

<h2>Submit Request</h2>

@if(ViewBag.send!=null)
{
    <div class="alert alert-success">
        <h3>@ViewBag.send</h3>
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p>
            Please use this form to submit any holiday requests or to have your information updated.
        </p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Subject", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-6">
                @Html.Editor("Subject", new { htmlAttributes = new { @class = "form-control",required="" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.TextArea("Message",null,10 ,50,new { htmlAttributes = new { @class = "form-control", required = "" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}
