@model StockSystem.Models.Employees

<style>
    .container{
        margin-top: 2px;
    }
</style>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    @using (Html.BeginForm("Index", "Profile", FormMethod.Post))
    {
    <div class="form-group">
        <label class="form-control">Calculate Gross Pay</label>
        <div class="col-md-4">
            <input type="number" required min="1" class="form-control" name="hours" />
        </div>
        <div>
            <button type="submit" class="btn btn-info">Check</button>
        </div>
    </div>
        
    }
</div>

@if(ViewBag.wages!=null)
{
    <div class="alert alert-success">
        <h3>Gross Pay: £@ViewBag.wages</h3>
    </div>
}
